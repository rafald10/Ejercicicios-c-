<Window x:Class="ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Nombre:" Margin="0,0,0,5"></TextBlock>
        <TextBox x:Name="txtNombre" Margin="0,0,0,10"/>


        <TextBlock Text="Apellido:" Margin="0,0,0,15"></TextBlock>
        <TextBox x:Name="txtApellido" Height="20" Margin="0,0,0,20"/>

        <Button Width="120" Height="35"
                HorizontalAlignment="Center"
                ToolTipService.ShowDuration="2000">

            <Button.Content>Enviar</Button.Content>

            <Button.ToolTip>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/imagenes/enviar.png" Width="24" Height="24" Margin="0,0,5,0"/>
                    <TextBlock Text="Haz clic aquí para enviar los datos..." VerticalAlignment="Center"/>
                </StackPanel>
            </Button.ToolTip>
        </Button>
    </StackPanel>
</Window>
