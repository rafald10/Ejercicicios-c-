<Window x:Class="ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="30" TextWrapping="Wrap">Hola mi nombre <Span Foreground="blue"> es es es </Span> es Rafael <LineBreak/> y me gusta el <Span FontWeight="Black">futbol </Span> pero soy muy malo , esto es un problema
            por que no puedo jugar con mis amigos, ellos se aburren conmigo.</TextBlock>
        <StackPanel Margin="30, 120">
            <Label Content="_NOMBRE:" Target="{Binding ElementName=txtName}" />
            <TextBox x:Name="txtName" TextChanged="txtName_TextChanged" Width="560"/>
        </StackPanel>

        <Grid Margin="320, 200, 320, 200">
            <Button Click="Pulsa_Click" Margin="0,0,10,-44">Pulsa aqui</Button></Grid>

    </Grid>

</Window>
