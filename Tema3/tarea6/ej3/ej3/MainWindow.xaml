<Window x:Class="ej3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ej3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Definición de filas y columnas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nombre -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="*"/>
            <!-- Mensaje -->
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Fila 1: Nombre -->
        <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=txtNombre}" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Image Source="imagenes/user.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <AccessText Text="_Nombre:"/>
            </StackPanel>
        </Label>
        <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="5" Width="200"/>

        <!-- Fila 2: Email -->
        <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=txtEmail}" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Image Source="imagenes/email.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <AccessText Text="_Email:"/>
            </StackPanel>
        </Label>
        <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="5" Width="200"/>

        <!-- Fila 3: TextBox con watermark -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <TextBox x:Name="txtMensaje"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Height="80"/>

            <!-- Watermark simple -->
            <TextBlock Text="Escribe tu mensaje aquí..."
                       Margin="8,4,0,0"
                       Foreground="Gray"
                       VerticalAlignment="Top"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=txtMensaje}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- Fila 4: Botón Enviar -->
        <Button Grid.Row="3" Grid.Column="1" 
                Content="Enviar"
                Width="100"
                Margin="5"
                HorizontalAlignment="Right"
                Click="BtnEnviar_Click">
            <Button.ToolTip>
                <ToolTip Content="Haz clic para enviar el formulario con los datos introducidos."/>
            </Button.ToolTip>
        </Button>
    </Grid>
</Window>
