<Window x:Class="ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Contacto" Height="350" Width="400">

    
    <StackPanel Margin="20" VerticalAlignment="Top">

        
        <TextBlock Text="Formulario de Contacto"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   TextAlignment="Center"/>

      
        <Label Content="Nombre:"/>
        <TextBox x:Name="txtNombre" Margin="0,0,0,10"/>

     
        <Label Content="Correo Electrónico:"/>
        <TextBox x:Name="txtCorreo" Margin="0,0,0,20"/>

        
        <Button Content="Enviar"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Content="Limpiar" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Width="80" Height="30"/>
        </StackPanel>

    </StackPanel>
</Window>

