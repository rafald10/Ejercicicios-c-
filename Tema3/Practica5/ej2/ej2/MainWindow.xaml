<Window x:Class="ej2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ventana con DockPanel" Height="400" Width="600">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">
                <MenuItem Header="Nuevo"/>
                <MenuItem Header="Abrir"/>
                <Separator/>
                <MenuItem Header="Salir"/>
            </MenuItem>
            <MenuItem Header="_Edición">
                <MenuItem Header="Copiar"/>
                <MenuItem Header="Pegar"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Listo"/>
        </StatusBar>

        <StackPanel DockPanel.Dock="Left" Width="120" Background="#EEE" Margin="0,0,5,0">
            <Button Content="Botón 1" Margin="5"/>
            <Button Content="Botón 2" Margin="5"/>
            <Button Content="Botón 3" Margin="5"/>
        </StackPanel>

        <TextBlock Text="Área principal de contenido"
                   TextWrapping="Wrap"
                   Background="#FAFAFA"
                   Padding="10"/>

    </DockPanel>
</Window>

