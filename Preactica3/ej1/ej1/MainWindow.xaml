<Window x:Class="ej1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ej1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Margin="10">
        <!-- Pregunta -->
        <Label x:Name="lblPregunta"
               Content="¿Cuántas Europa Leagues tiene el Sevilla FC?"
               FontWeight="Bold"
               Margin="0,0,0,10"/>

        <!-- Respuestas con imágenes -->
        <RadioButton x:Name="r1" GroupName="Respuestas" Margin="0,5">
            <StackPanel Orientation="Horizontal">
                <Image Source="imagenes/uefa.jpg" Width="24" Height="24" Margin="0,0,5,0"/>
                <TextBlock Text="3" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>

        <RadioButton x:Name="r2" GroupName="Respuestas" Margin="0,5">
            <StackPanel Orientation="Horizontal">
                <Image Source="imagenes/uefa.jpg" Width="24" Height="24" Margin="0,0,5,0"/>
                <TextBlock Text="7" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>

        <RadioButton x:Name="r3" GroupName="Respuestas" Margin="0,5">
            <StackPanel Orientation="Horizontal">
                <Image Source="imagenes/uefa.jpg" Width="24" Height="24" Margin="0,0,5,0"/>
                <TextBlock Text="6" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>

        <RadioButton x:Name="r4" GroupName="Respuestas" Margin="0,5">
            <StackPanel Orientation="Horizontal">
                <Image Source="imagenes/uefa.jpg" Width="24" Height="24" Margin="0,0,5,0"/>
                <TextBlock Text="5" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>

        
        <Button Content="Corregir" Click="BtnCorregir_Click" Margin="0,10,0,0" Width="100"/>
    </StackPanel>
</Window>

